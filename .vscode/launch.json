{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Go Program",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",  // This is the directory containing your main.go
            "cwd": "${workspaceFolder}",        // Set the working directory
            "output": "debug",                  // Output file for the compiled program
            "showLog": true,                    // Show log in the debug console
            "trace": "verbose"                  // Enable more detailed logging for troubleshooting
        }
    ]
}
